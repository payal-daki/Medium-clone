pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    // Install Node modules
                    sh 'npm install'
                }
            }
        }
        
        stage('Start JSON Server') {
            steps {
                script {
                    // Start JSON Server in the background
                    sh 'npx json-server db.json --port 3001 --watch &'
                }
            }
        }
        
        stage('Start Application') {
            steps {
                script {
                    // Start the application
                    sh 'npm run start'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run your tests
                    sh 'npm test'
                }
            }
        }

        stage('Eject') {
            steps {
                script {
                    // Eject if using Create React App or similar
                    sh 'npm run eject'
                }
            }
        }
    }

    post {
        always {
            // Clean up after build
            echo 'Cleaning up...'
            // Stop the JSON Server if it's still running
            sh 'kill $(lsof -t -i:3001) || true'
        }
    }
}
