pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clone the repository from Git
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Install Node.js modules
                    sh 'npm install'
                }
            }
        }

        stage('Run JSON Server') {
            steps {
                script {
                    // Start JSON Server in the background
                    sh 'npx json-server db.json --port 3001 --watch &'
                }
            }
        }

        stage('Run Application') {
            steps {
                script {
                    // Start the React application
                    sh 'npm run start'
                }
            }
        }
    }

    post {
        always {
            // Clean up if necessary
            sh 'pkill -f "json-server" || true'
            sh 'pkill -f "npm start" || true'
        }
    }
}
