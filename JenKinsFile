pipeline {
    agent any

    environment {
        // Set PATH to include the directory where Node.js and npm are installed
        PATH = "/home/ubuntu/.nvm/versions/node/v22.5.1/bin:${env.PATH}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    checkout scm
                }
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }
        stage('Start JSON Server') {
            steps {
                script {
                    sh 'npx json-server db.json --port 3001 --watch &'
                }
            }
        }
        stage('Start Application') {
            steps {
                script {
                    sh 'npm run start'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
        }
        success {
            echo 'Pipeline succeeded'
        }
        failure {
            echo 'Pipeline failed'
        }
    }
}
