pipeline {
    agent any // Use any available agent

    stages {
        stage('Update and Install Node.js') {
            steps {
                script {
                    // Update package list and install necessary packages
                    sh 'sudo apt update'
                    
                    // Install Node.js and npm
                    sh 'sudo apt install -y nodejs npm'
                }
            }
        }
        
        stage('Fetch Project Repo') {
            steps {
                script {
                    // Clone the project repository
                    sh 'git clone https://github.com/payal-daki/Medium-clone.git'
                    
                    // Navigate to the project directory
                    dir('Medium-clone') {
                        // Install project dependencies
                        sh 'npm install'
                    }
                }
            }
        }
        
        stage('Build') {
            steps {
                script {
                    dir('Medium-clone') {
                        // Build the project
                        sh 'npm run build'
                    }
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    dir('Medium-clone') {
                        // Run tests
                        sh 'npm test'
                    }
                }
            }
        }
        
        stage('Eject') {
            steps {
                script {
                    dir('Medium-clone') {
                        // Eject if necessary (only needed for certain setups, not always required)
                        sh 'npm run eject'
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    dir('Medium-clone') {
                        // Start json-server in the background
                        sh 'npx json-server db.json --port 3001 --watch &'
                        
                        // Start npm server in the background
                        sh 'npm start &'
                    }
                }
            }
        }
    }

    post {
        always {
            // Clean up after the build if necessary
            sh 'rm -rf Medium-clone'
        }
    }
}
