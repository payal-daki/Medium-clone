pipeline {
    agent any

    tools {
        nodejs 'NodeJS' // The name of the NodeJS installation in Jenkins
    }

    environment {
        PORT = '3001'
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone the repository
                git 'https://github.com/payal-daki/Medium-clone.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Node.js dependencies
                sh 'npm install'
            }
        }

        stage('Run JSON Server') {
            steps {
                // Run JSON Server in the background
                sh 'npx json-server db.json --port $PORT --watch &'
            }
        }

        stage('Run Application') {
            steps {
                // Start the application
                sh 'npm run start'
            }
        }

        stage('Run Tests') {
            steps {
                // Run your tests here if you have any
                // Example: sh 'npm test'
            }
        }

        stage('Clean Up') {
            steps {
                // Optionally, stop JSON Server and other cleanup tasks
                sh 'pkill -f "json-server"'
            }
        }
    }

    post {
        always {
            // Actions to always perform, like sending notifications
        }
    }
}
