pipeline {
    agent any // Use any available agent

    stages {
        stage('Fetch Project Repo') {
            steps {
                script {
                    // Clone the project repository
                    sh 'git clone https://github.com/payal-daki/Medium-clone.git'
                    
                    // Navigate to the project directory
                    dir('Medium-clone') {
                        // Check Node.js and npm versions
                        sh 'node -v'
                        sh 'npm -v'
                    }
                }
            }
        }
        
        stage('Build') {
            steps {
                script {
                    dir('Medium-clone') {
                        // Optionally, you can run any build commands here if needed
                        // For example, if you are using a build tool like Webpack:
                        // sh 'npm run build'
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    dir('Medium-clone') {
                        // Start json-server in the background
                        sh 'nohup npx json-server db.json --port 3001 --watch > json-server.log 2>&1 &'
                        
                        // Start npm server in the background
                        sh 'nohup npm start > npm-server.log 2>&1 &'
                        
                        // Optionally, you can wait for some time to ensure the servers are up
                        sleep(time: 30, unit: 'SECONDS')
                    }
                }
            }
        }
    }
}
