pipeline {
    agent any

    environment {
        NODE_VERSION = '22' // Ensure this matches the Node.js version installed in Jenkins
        PORT = '3001'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from GitHub
                git url: 'https://github.com/payal-daki/Medium-clone.git'
            }
        }

        stage('Setup') {
            steps {
                // Install Node.js
                script {
                    def nodeHome = tool name: 'NodeJS', type: 'NodeJS'
                    env.PATH = "${nodeHome}/bin:${env.PATH}"
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Node.js modules
                sh 'npm install'
            }
        }

        stage('Run json-server') {
            steps {
                // Start the json-server in the background
                sh 'npx json-server db.json --port ${PORT} --watch &'
            }
        }

        stage('Start Application') {
            steps {
                // Start the application
                sh 'npm run start'
            }
        }
    }

    post {
        always {
            // Clean up actions, such as stopping the server if needed
            sh 'kill $(lsof -t -i:${PORT}) || true'
        }
    }
}
