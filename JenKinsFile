pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    // Ensure Node.js is available
                    sh 'npm install'
                }
            }
        }
        
        stage('Build') {
            steps {
                script {
                    // Replace 'npm run build' with the correct build command if needed
                    sh 'npm run build'
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    // Replace with your actual test command
                    sh 'npm test'
                }
            }
        }
        
        stage('Eject') {
            steps {
                script {
                    // Run the eject command if using Create React App or similar
                    sh 'npm run eject'
                }
            }
        }

        stage('Start JSON Server') {
            steps {
                script {
                    // Start the json-server in the background
                    sh 'npx json-server db.json --port 3001 --watch &'
                }
            }
        }
    }

    post {
        always {
            // Clean up after build
            echo 'Cleaning up...'
            sh 'kill $(lsof -t -i:3001) || true' // Stop json-server if running
        }
    }
}
