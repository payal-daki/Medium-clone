pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/payal-daki/Medium-clone.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run json-server') {
            steps {
                script {
                    def jsonServerProcess = sh(script: 'npx json-server db.json --port 3001 --watch & echo $!', returnStdout: true).trim()
                    env.JSON_SERVER_PID = jsonServerProcess
                }
            }
        }

        stage('Start Application') {
            steps {
                sh 'npm start &'
            }
        }
}
